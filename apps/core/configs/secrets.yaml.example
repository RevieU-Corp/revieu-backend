# RevieU Core Secrets Template
#
# ⚠️  DO NOT commit this file with real values!
#
# Usage:
#   1. Copy this file to secrets.yaml
#   2. Fill in the values below
#   3. Encrypt: kubeseal --cert ../k8s/pub-cert.pem < secrets.yaml > ../k8s/sealed-secrets/revieu-secrets.yaml
#   4. Delete secrets.yaml (or keep it gitignored)

apiVersion: v1
kind: Secret
metadata:
  name: revieu-secrets
  namespace: revieu
type: Opaque
stringData:
  # Database
  DB_PASSWORD: "<your-db-password>"

  # JWT Authentication
  JWT_SECRET: "<your-jwt-secret-min-32-chars>"

  # SMTP Email Service
  SMTP_USERNAME: "<your-email@gmail.com>"
  SMTP_PASSWORD: "<your-app-password>"

  # Google OAuth
  GOOGLE_CLIENT_ID: "<your-google-client-id>"
  GOOGLE_CLIENT_SECRET: "<your-google-client-secret>"
